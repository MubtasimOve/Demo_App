@model Category

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">

        <h2 class="text-primary">Create Category</h2>
        
        </div>

        <div class="mb-3" row p-1>
            <label asp-for="Name" class="p-0">Category</label>
            <input asp-for="Name" class="form-control" />

        </div>

        <div class="mb-3" row p-1>
            <label asp-for="DisplayOrder" class="p-0">DisplayOrder</label>
            <input asp-for="DisplayOrder" class="form-control" />

        </div>

        <div class="row p-1">
            <div class="col-6 p-1">
                <button type="submit" class="btn btn-primary from control" style="width:150px">Create</button>

            </div>
            <div class="col-6">
                <a asp-controller="Category" text-color="gray" asp-action="Index" class="btn btn-secondary border from-control" style="width:150px">
                    Back
                </a>
            </div>

        </div>
        
        
    </div>
</form>