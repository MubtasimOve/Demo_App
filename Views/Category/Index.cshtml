@model List<Category>


<div class="container">

    <div class="row pt-4 pb-3">

        <div class="col-6">

            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create"class="btn btn-primary">
                <i class="bi bi-folder-plus"></i>  Create New Category
            </a>
            <a asp-controller="Category" text-color="gray" asp-action="Index" class="btn btn-secondary border from-control" style="width:150px">
                Back
            </a>
        </div>


    </div>

<table class="table table-bordered table-striped">
    <thead>



<tr>
    <th>
        Category Name
    </th>

    <th>
        DisplayOrder
    </th>


</tr>

    </thead>
<tbody>
     
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        
        {
    <tr>
        <td>@obj.Name</td>
        <td>@obj.DisplayOrder</td>
    </tr>
    <td>
        <div class="w-75 btn-group" role="group">
            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Category_Id" class="btn btn-primary mx-1">
                        <i class="bi bi-pencil-square"></i>Edit
            </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Category_Id" class="btn btn-danger mx-1">
                        <i class="bi bi-trash3-fill"></i>Delete
                    </a>
        </div>
    </td>

    }
</tbody>

</table>
</div>